    <script>
        const urlParams = new URLSearchParams(window.location.search);
        const actCode = urlParams.get('act') || 'GEX';
        const mNum = urlParams.get('m') || '1';
        const actName = urlParams.get('name') || 'Activity X';

        // الإعداد الأولي
        document.getElementById('actNameDisplay').innerText = actName;
        document.getElementById('actCodeDisplay').innerText = actCode;
        document.getElementById('missionNum').innerText = 'M ' + mNum;
        document.getElementById('activityLogo').src = `assets/AL/${actCode}.png`;
        
        // تحميل المستوى A افتراضياً
        document.getElementById('mainIframe').src = `assets/MIF/${actCode}${mNum}A.html`;

        function changeLevel(level, tokens, btn) {
            // تحديث الـ Iframe
            document.getElementById('mainIframe').src = `assets/MIF/${actCode}${mNum}${level}.html`;
            // تحديث التوكينز
            document.getElementById('currentTokens').innerText = tokens + ' TK';
            // تحديث شكل الزراير
            document.querySelectorAll('.diff-btn').forEach(b => b.classList.remove('active'));
            btn.classList.add('active');
        }

        function toggleGuide(show) {
            if(show) { document.getElementById('guideFrame').src = `assets/MIF/Guide.html#${actCode}`; }
            document.getElementById('guideModal').style.display = show ? 'block' : 'none';
        }
    </script>
